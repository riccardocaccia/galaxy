runners:
  local_runner:
    load: galaxy.jobs.runners.local:LocalJobRunner
    workers: 4
    
handling:
  assign: ['db-skip-locked']   # oppure ['db-transaction-isolation']

execution:
  default: local_dest
  environments:
    local_env:
      runner: local_runner
      temp_dir: true

tools:
- class: local # these special tools that aren't parameterized for remote execution - expression tools, upload, etc
  execution: local_dest
